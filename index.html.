  <script>
    // ------- Email sync
    (function(){
      var email = 'support@mindsell.pet'; // CAMBIA QUI
      document.getElementById('supportEmailTop').textContent = email;
      document.getElementById('supportEmailTop').href = 'mailto:'+email;
      document.getElementById('supportEmailInline').textContent = email;
    })();

    // ------- Legal modals
    function openLegal(which){ document.getElementById('modal-'+which).classList.add('open'); }
    function closeLegal(){ Array.from(document.querySelectorAll('.modal')).forEach(m=>m.classList.remove('open')); }

    // ------- Cookie banner (semplificato)
    var CK = 'mindsell_consent_simple';
    function cookieAccept(){ localStorage.setItem(CK,'all'); hideCookie(); }
    function cookieReject(){ localStorage.setItem(CK,'necessary'); hideCookie(); }
    function hideCookie(){ var c=document.getElementById('cookie'); if(c) c.classList.add('hide'); }
    (function(){ if(localStorage.getItem(CK)) hideCookie(); })();
  </script>
